@model OpenLibrary.Web.Models.ReviewViewModel

<div class="form-group">
    <label asp-for="Comment" class="control-label"></label>
    <textarea asp-for="Comment" maxlength="200" class="form-control"></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Rating" class="control-label"></label>
    <input asp-for="Rating" type="number" min="0" max="5" class="form-control" />
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>

<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="Favorite" /> @Html.DisplayNameFor(model => model.Favorite)
        </label>
    </div>
</div>