@model IEnumerable<OpenLibrary.Web.Data.Entities.ReviewEntity>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<br />

<a asp-action="Index" class="btn btn-success"><i class="glyphicon glyphicon-arrow-left"></i> Back to Documents</a>
<div class="row">

    <div class="col-md-12">
        <br />
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reviews</h3>
            </div>
            <div class="panel-body">

                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rating)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Favorite)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rating)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comment)
                                </td>
                                <td>
                                    @if (item.Favorite == true)
                                    {
                                        <p>
                                            Liked it
                                        </p>
                                    }
                                    @if (item.Favorite == false)
                                    {
                                        <p>
                                            Did not think
                                        </p>
                                    }
                                  
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();//this is for ID
            // Delete item
            var item_to_delete;
            $('.deleteItem').click((e) => {//this is for Class
                item_to_delete = e.currentTarget.dataset.id;
            });
            $("#btnYesDelete").click(function () {//this is for ID
                window.location.href = '/TripExpenseType/Delete/' + item_to_delete;
            });
        });
    </script>
}