@model OpenLibrary.Web.Models.ReviewViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Edit</h2>

<h4>Name of the document: @Model.Document.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReview" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_Review" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.DocumentId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}